# .env.example

# LLM Models
AIDGRAPH_CHEAP_MODEL=gpt-4o-mini
AIDGRAPH_REASONING_MODEL=gpt-4o
AIDGRAPH_MAX_TOKENS=4000
AIDGRAPH_TEMPERATURE=0.7

# Graph Settings
AIDGRAPH_MAX_ITERATIONS=3
AIDGRAPH_CRITIC_THRESHOLD=8.0
AIDGRAPH_HITL_ENABLED=true

# RAG Settings
AIDGRAPH_CHROMA_DIR=./chroma_db
AIDGRAPH_TOP_K=5

# API Settings
AIDGRAPH_API_HOST=0.0.0.0
AIDGRAPH_API_PORT=8000
AIDGRAPH_DEBUG=false

# LLM Provider Keys (раскомментируйте и добавьте свои)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_API_KEY=...
